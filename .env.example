# Unified AI API Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Settings
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_TITLE="Unified AI API"
API_VERSION=0.1.0

# API Key for authentication (generate a secure random string)
API_KEY=your-secret-api-key-here

# =============================================================================
# LLM Provider API Keys
# =============================================================================
# Primary provider (fastest, cheapest)
GROQ_API_KEY=your-groq-api-key

# Fallback providers (in order of preference)
GOOGLE_API_KEY=your-google-gemini-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================================================
# Provider Configuration
# =============================================================================
# Order of providers for fallback (comma-separated)
LLM_PROVIDER_ORDER=groq,gemini,openai,anthropic

# Default model for each provider
GROQ_MODEL=llama-3.3-70b-versatile
GEMINI_MODEL=gemini-1.5-flash
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_MINUTE=100000

# =============================================================================
# Storage (for production)
# =============================================================================
# Redis for session storage
REDIS_URL=redis://localhost:6379/0

# PostgreSQL for analytics (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/unified_ai

# =============================================================================
# Observability
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# Enable cost tracking
ENABLE_COST_TRACKING=true
